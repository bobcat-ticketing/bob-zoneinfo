{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bitbucket.org/samtrafiken/bob-schema-tariff-zones/0.0.1/tariffzones.schema.json",
  "title": "Tariff zone information",
  "type": "object",
  "required": [
    "tariffZones"
  ],
  "properties": {
    "tariffZones": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/tariffZone"
      }
    }
  },
  "$defs": {
    "tariffZone": {
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "description": "Unique identifier for the tariff zone. Should not be parsed by the client.",
          "type": "string"
        },
        "tariffZoneId": {
          "description": "Tariff zone identifier as defined in NeTEx",
          "type": "string",
          "examples": [
            "SE:050:TariffZone:6_9081006200000981"
          ]
        },
        "gid": {
          "description": "Tariff zone GID as defined in Noptis",
          "type": "integer",
          "format": "int64",
          "examples": [
            9081006200000981
          ]
        },
        "privateCode": {
          "description": "A local or internal code or number for the tariff zone",
          "type": "string",
          "examples": [
            "6:981"
          ]
        },
        "name": {
          "description": "Local name",
          "type": "string",
          "examples": [
            "Zone A"
          ]
        },
        "groupId": {
          "description": "Group ID as defined in the BoB Product API",
          "type": "string",
          "examples": [
            "1"
          ]
        },
        "geography": {
          "$ref": "https://geojson.org/schema/FeatureCollection.json"
        },
        "validFrom": {
          "description": "Date and time when tariff zone is valid from",
          "type": "string",
          "format": "date-time"
        },
        "validTo": {
          "description": "Date and time when tariff zone is valid to",
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}